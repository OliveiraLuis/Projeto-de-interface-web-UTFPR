<%- include ../header -%>

<body>
  <div class="container is-widescreen">
    <div class="notification">
      <div class="columns">
        <div class="column is-one-thirds"> </div>
        <div class="column">
          <h2 class="title is-2">Cadastro de Voo</h2>
        </div>
        <div class="column"> </div>
      </div>
    </div>

    <form action="/voo/cadastrar" method="POST" id="cadastrar"></form>
    <div class="columns">
      <div class="column is-one-quarter"></div>
      <div class="column">
        <div class="field">
          <p class="control has-icons-left">
            <input form="cadastrar" class="input" name="dtViagem" type="date" placeholder="Data da viagem">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
      </div>
      <div class="column">
        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input form="cadastrar" class="input" name="numeroVoo" type="number" placeholder="Número do voo">
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>
        </div>
      </div>
      <div class="column"></div>
    </div>

    <div class="columns">
      <div class="column is-one-quarter"></div>
      <div class="column">
        <div class="field">
          <p class="control has-icons-left">
            <input form="cadastrar" class="input" name="partida" type="text" placeholder="Local de partida">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
      </div>
      <div class="column">
        <div class="field">
          <p class="control has-icons-left">
            <input form="cadastrar" class="input" type="text" name="destino" placeholder="Local de destino">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
      </div>
      <div class="column"></div>
    </div>

    <div class="columns">
        <div class="column is-one-quarter"></div>
        <div class="column">
          <div class="field">
            <p class="control has-icons-left">
              <input form="cadastrar" class="input" name="hora" type="text" placeholder="Horário de viagem">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
        </div>
        <div class="column">
          <div class="field">
            <p class="control has-icons-left">
              <input form="cadastrar" class="input" type="number" name="valor" step="0.01" placeholder="Valor passagem normal">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
        </div>
        <div class="column"></div>
      </div>
  
      <div class="columns">
        <div class="column is-one-quarter"></div>
        <div class="column">
         
        </div>
        <div class="column">
          <div class="field">
            <p class="control has-icons-left">
              <input form="cadastrar" class="input" type="number" name="valorEspecial" step="0.01" placeholder="Valor passagem especial">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
        </div>
        <div class="column"></div>
      </div>

    <div class="columns">
      <div class="column is-one-quarter"></div>
      <div class="column is-one-quarter"><button form="cadastrar" type="submit" class="button is-success is-medium">Enviar</button></div>
      <div class="column is-one-quarter"></div>
      <div class="column is-one-quarter"></div>
    </div>
</body>

<%- include ../footer -%>